<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.Organization" table="organization" schema="practice">
        <id name="idOrganization">
            <column name="id_organization" sql-type="int"/>
        </id>
        <property name="fullName">
            <column name="full_name" sql-type="varchar(200)" length="200"/>
        </property>
        <property name="shortName">
            <column name="short_name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="inn">
            <column name="INN" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="legalAddress">
            <column name="legal_address" sql-type="varchar(200)" length="200"/>
        </property>
        <property name="actualAddress">
            <column name="actual_address" sql-type="varchar(200)" length="200"/>
        </property>
        <property name="director">
            <column name="director" sql-type="varchar(25)" length="25"/>
        </property>
        <property name="number">
            <column name="number" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>